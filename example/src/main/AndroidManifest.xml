<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.matbadev.dabirva.example">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity-alias
            android:name="com.matbadev.dabirva.example.MainActivity"
            android:targetActivity=".ui.launch.LaunchActivity" />

        <activity
            android:name=".ui.click.ClickListActivity"
            android:exported="true"
            android:label="@string/click_list_title"
            android:parentActivityName=".ui.launch.LaunchActivity" />

        <activity
            android:name=".ui.diffing.ItemDiffingActivity"
            android:exported="true"
            android:label="@string/item_diffing_title"
            android:parentActivityName=".ui.launch.LaunchActivity" />

        <activity
            android:name=".ui.launch.LaunchActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.simple.SimpleListActivity"
            android:exported="true"
            android:label="@string/simple_title"
            android:parentActivityName=".ui.launch.LaunchActivity" />

        <activity
            android:name=".ui.stickyheader.horizontal.HorizontalStickyHeaderListActivity"
            android:exported="true"
            android:label="@string/stickyheader_horizontal_title"
            android:parentActivityName=".ui.launch.LaunchActivity" />

        <activity
            android:name=".ui.stickyheader.vertical.VerticalStickyHeaderListActivity"
            android:exported="true"
            android:label="@string/stickyheader_vertical_title"
            android:parentActivityName=".ui.launch.LaunchActivity" />

    </application>

</manifest>
